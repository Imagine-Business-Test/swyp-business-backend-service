{
  "name": "swyp-business-backend-service",
  "version": "0.0.1",
  "description": "Backend service for managing data and domain for businesses on swyp platform",
  "main": "src/index.js",
  "author": "Ossaija ThankGod <tossaija@orecka.com>",
  "license": "None",
  "scripts": {
    "start": "yarn serve",
    "build": "yarn format && yarn build-ts && yarn test",
    "serve": "node dist/index.js",
    "commit": "git-cz",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "format": "lint-staged",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.11.1",
    "@types/glob": "^5.0.35",
    "@types/http-status": "^0.2.30",
    "@types/jest": "^22.2.3",
    "@types/joi": "^13.0.8",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/log4js": "^2.3.5",
    "@types/mongoose": "^5.0.14",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.1.0",
    "@types/nodemailer": "^4.6.0",
    "@types/nodemailer-mailgun-transport": "^1.3.3",
    "@types/semver": "^5.5.0",
    "@types/uuid": "^3.4.3",
    "concurrently": "^3.5.1",
    "cz-conventional-changelog": "^2.1.0",
    "global": "^4.3.2",
    "husky": "^1.0.0-rc.6",
    "jest": "^22.4.3",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.17.4",
    "prettier": "^1.13.7",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "awilix": "^3.0.8",
    "awilix-express": "^1.1.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "http-status": "^1.1.2",
    "joi": "^13.3.0",
    "jsonwebtoken": "^8.2.1",
    "log4js": "^2.6.1",
    "mongoose": "^5.1.1",
    "morgan": "^1.9.0",
    "nodemailer": "^4.6.5",
    "nodemailer-mailgun-transport": "^1.4.0",
    "npm": "^6.1.0",
    "semver": "^5.5.0",
    "uuid": "^3.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build",
      "pre-push": "npm run build"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
